<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyleHeadline">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="EditTextStyle" parent="Widget.Material3.TextInputEditText.FilledBox">
        <!-- Основные цвета -->
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:hint">@color/colorAccent</item>

        <!-- Отступы и шрифт -->
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>

        <!-- Оформление границ -->
        <item name="android:background">@drawable/rounded_edittext_background</item>
    </style>

</resources>
